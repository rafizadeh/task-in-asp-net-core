@model List<CustomerDto>
@{
	ViewData["Title"] = "Dashboard";
}
@section Styles{
<link href="~/site/assets/css/users/account-setting.css" rel="stylesheet" type="text/css" />
<link rel="stylesheet" type="text/css" href="~/site/plugins/table/datatable/datatables.css">
<link rel="stylesheet" type="text/css" href="~/site/assets/css/forms/theme-checkbox-radio.css">
<link rel="stylesheet" type="text/css" href="~/site/plugins/table/datatable/dt-global_style.css">
<link rel="stylesheet" type="text/css" href="~/site/plugins/loaders/custom-loader.css">
<link href="~/site/plugins/dropify/dropify.min.css" rel="stylesheet" type="text/css">
<link href="~/site/plugins/sweetalerts/sweetalert2.min.css" rel="stylesheet" type="text/css" />
<link href="~/site/plugins/sweetalerts/sweetalert.css" rel="stylesheet" type="text/css" />
}
<div class="layout-px-spacing">
	<div class="row layout-top-spacing">
		<div class="col-xl-12 col-lg-12 col-sm-12 layout-spacing">
			<div class="widget-content widget-content-area br-6">
				<div class="w-100 px-3">
					<a data-target="#addCustomerModalForm" data-toggle="modal" id="addCustomer" class="btn btn-outline-primary no-hover"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-plus"><line x1="12" y1="5" x2="12" y2="19"></line><line x1="5" y1="12" x2="19" y2="12"></line></svg>  Add Customer </a>
				</div>
				<div class="table-responsive mb-4 mt-4">
					<table id="multi-column-ordering" class="table table-hover" style="width:100%">
						<thead>
							<tr>
								<th>№</th>
								<th>Customer name</th>
								<th>Phone Number</th>
								<th></th>
							</tr>
						</thead>
						<tbody>
							@{
								int counter = 1;
								foreach (var customer in Model)
								{
									<tr>
										<td>@(counter++)</td>
										<td>@customer?.Name</td>
										<td>@customer?.Phone</td>
										<td class="text-center">
											<a asp-controller="Customer" asp-action="Delete" asp-route-id="@customer?.Id" class="bs-tooltip" data-toggle="tooltip" data-placement="top" title="" data-original-title="Delete"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg></a>
										</td>
									</tr>
								}
							}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
</div>


<form asp-controller="Customer" asp-action="Add" class="modal fade bd-example-modal-lg" id="addCustomerModalForm" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" style="display: none;" aria-hidden="true">
	<div class="modal-dialog modal-lg" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<svg aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-x"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
				</button>
			</div>
			<div class="modal-body general-info">
				<div class="w-100 info">
					<div class="row">
						<div class="col-xl-12 col-lg-12 col-md-12 mt-md-0 mt-4">
							<div class="row">
								<div class="col-sm-12">
									<div class="form-group">
										<label for="customerName" class="col-form-label col-form-label-sm">Fullname</label>
										<input autocomplete="off" maxlength="200" type="text" id="customerName" class="form-control" />
										<span class="custom-invalid-input"></span>
									</div>
								</div>
								<div class="col-sm-12">
									<div class="form-group">
										<label for="customerNumber" class="col-form-label col-form-label-sm">PhoneNumber</label>
										<input autocomplete="off" maxlength="300" type="number" id="customerNumber" class="form-control" />
										<span class="custom-invalid-input"></span>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

			<div class="modal-footer">
				<button class="btn no-hover" data-dismiss="modal"><i class="flaticon-cancel-12"></i> Cancel</button>
				<button type="submit" id="addCustomerBtn" class="btn btn-primary no-hover">Save</button>
			</div>
		</div>
	</div>
</form>


@section Scripts{
<script src="~/site/plugins/table/datatable/datatables.js"></script>
<script src="~/site/plugins/dropify/dropify.min.js"></script>
<script src="~/site/assets/js/users/account-settings.js"></script>
<partial name="_ValidationScriptsPartial" />
<script src="~/site/plugins/sweetalerts/sweetalert2.min.js"></script>
<script src="~/site/plugins/sweetalerts/custom-sweetalert.js"></script>
<script>
	$('#multi-column-ordering').DataTable({
		"oLanguage": {
			"oPaginate": { "sPrevious": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-left"><line x1="19" y1="12" x2="5" y2="12"></line><polyline points="12 19 5 12 12 5"></polyline></svg>', "sNext": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-arrow-right"><line x1="5" y1="12" x2="19" y2="12"></line><polyline points="12 5 19 12 12 19"></polyline></svg>' },
			"sSearch": '<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-search"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line></svg>',
			"sSearchPlaceholder": "Axtar...",
			"sLengthMenu": "Nəticələr :  _MENU_",
		},
		ordering: false,
		paging: false,
		info: false,
		searching: false,
		"stripeClasses": [],
		"lengthMenu": [7, 10, 20, 50],
		"pageLength": 7,
		columnDefs: [{
			targets: [0],
			orderData: [0, 1]
		}, {
			targets: [1],
			orderData: [1, 0]
		}, {
			targets: [4],
			orderData: [4, 0]
		}]
	});
</script>
}